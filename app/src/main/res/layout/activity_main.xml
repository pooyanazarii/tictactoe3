<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:onClick="onClickPlay"
        android:id="@+id/layout_paly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/playgame"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Game"
            android:textSize="50sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_about"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_below="@id/layout_paly">

        <ImageView
            android:id="@+id/img_about"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/aboutt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="50sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_below="@id/layout_about">

        <ImageView
            android:id="@+id/img_exit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/exit"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textSize="50sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay_about_msg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F282B1FF"
        android:layout_centerInParent="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/txt_nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Developer : Pooya Nazari"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textStyle="italic"
            android:textSize="24dp"
            android:text="E-Mail: npooya12@gmail.com"
            android:textColor="#00695C"
            />
        <Button
            android:onClick="closeLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="Close"
            style="@style/Widget.AppCompat.Button"
            />


    </RelativeLayout>

</RelativeLayout>